# Database (Prisma Accelerate)
DATABASE_URL="prisma+postgres://accelerate.prisma-data.net/?api_key=your-prisma-accelerate-api-key"

# Alternative Database URL (Direct Postgres)
# DATABASE_URL="postgres://username:password@host:5432/database?sslmode=require"

# JWT
JWT_SECRET="your-super-secret-jwt-key"

# Application
PORT=3000
NODE_ENV=development
APP_URL="http://localhost:3000"
FRONTEND_URL="http://localhost:3001"

# Email (Resend)
RESEND_API_KEY="your-resend-api-key-here"
EMAIL_FROM="your-email@example.com"

# Legacy Email (for microservice)
EMAIL_USER="your-email@example.com"
EMAIL_PASSWORD="your-app-password"

# AI Services
OPENAI_API_KEY="your-openai-api-key-here"
HUGGINGFACE_API_KEY="your-huggingface-api-key-here"

# Microservices
ML_SERVICE_HOST="localhost"
ML_SERVICE_PORT=8000
EMAIL_SERVICE_HOST="localhost"
EMAIL_SERVICE_PORT=3002

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH="./uploads"

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# Logging
LOG_LEVEL="info"

# Kubernetes (for production)
CLUSTER_NAME="ai-hiring-cluster"
NAMESPACE="ai-hiring"

# Fly.io
FLY_APP_NAME="ai-hiring-api"
FLY_REGION="iad"