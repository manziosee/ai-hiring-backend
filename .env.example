# ===========================================
# AI HIRING PLATFORM - ENVIRONMENT CONFIG
# ===========================================

# Database Configuration
# Choose ONE of the following database options:

# Option 1: Local PostgreSQL (Recommended for development)
DATABASE_URL="postgresql://username:password@localhost:5432/ai_hiring_db"
DIRECT_URL="postgresql://username:password@localhost:5432/ai_hiring_db"

# Option 2: Prisma Accelerate (For production)
# DATABASE_URL="prisma+postgres://accelerate.prisma-data.net/?api_key=your-prisma-accelerate-api-key"

# Option 3: Remote PostgreSQL (Production)
# DATABASE_URL="postgresql://username:password@host:5432/database?sslmode=require"

# Authentication & Security
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRES_IN="7d"

# Application Settings
PORT=3000
NODE_ENV="development"
APP_URL="http://localhost:3000"
FRONTEND_URL="http://localhost:3001"

# Email Configuration
# Primary email service (Resend - Recommended)
RESEND_API_KEY="re_your-resend-api-key-here"
EMAIL_FROM="noreply@yourdomain.com"

# Fallback email service (Gmail/SMTP)
EMAIL_USER="your-email@gmail.com"
EMAIL_PASSWORD="your-gmail-app-password"
EMAIL_HOST="smtp.gmail.com"
EMAIL_PORT=587

# AI & ML Services
# OpenAI API (Required for AI features)
OPENAI_API_KEY="sk-your-openai-api-key-here"
OPENAI_MODEL="gpt-3.5-turbo"

# HuggingFace API (Optional - for additional ML models)
HUGGINGFACE_API_KEY="hf_your-huggingface-token-here"

# Microservices Configuration
ML_SERVICE_HOST="localhost"
ML_SERVICE_PORT=8000
ML_SERVICE_URL="http://localhost:8000"

EMAIL_SERVICE_HOST="localhost"
EMAIL_SERVICE_PORT=3002
EMAIL_SERVICE_URL="http://localhost:3002"

NOTIFICATION_SERVICE_HOST="localhost"
NOTIFICATION_SERVICE_PORT=3003

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_DEST="./uploads"
ALLOWED_FILE_TYPES=".pdf,.doc,.docx,.txt"

# Security & Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=100
CORS_ORIGIN="http://localhost:3001"

# Logging Configuration
LOG_LEVEL="info"
LOG_FILE="./logs/app.log"
ENABLE_REQUEST_LOGGING=true

# Production Deployment
# Kubernetes Configuration
CLUSTER_NAME="ai-hiring-cluster"
NAMESPACE="ai-hiring"
KUBE_CONFIG_PATH="~/.kube/config"

# Fly.io Configuration
FLY_APP_NAME="ai-hiring-api"
FLY_REGION="iad"

# Health Check
HEALTH_CHECK_TIMEOUT=5000
HEALTH_CHECK_INTERVAL=30000

# ===========================================
# SETUP INSTRUCTIONS:
# 1. Copy this file to .env
# 2. Replace placeholder values with actual credentials
# 3. Ensure PostgreSQL is running
# 4. Run: npm run setup
# ===========================================